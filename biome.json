{
  "$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useSemanticElements": {
          "level": "warn"
        }
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "json": {
    "formatter": {
      "enabled": true
    },
    "parser": { "allowTrailingCommas": true }
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [".next/**", "node_modules/**", "out/**", ".yarn/**"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  }
}
