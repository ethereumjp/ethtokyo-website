{
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useSemanticElements": {
          "level": "warn"
        }
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 80
  },
  "json": {
    "formatter": {
      "enabled": true
    },
    "parser": { "allowTrailingCommas": true }
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [".next/**", "node_modules/**", "out/**", ".yarn/**"]
  }
}
